FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
	"alpha.water.*"
    {
        nAlphaCorr      2;
        nAlphaSubCycles 5;
        cAlpha          1;

        MULESCorr       yes;
        nLimiterIter    3;

        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0;
    }
   "pcorr.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-5;
        relTol          0;
    }

    p_rgh
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-07;
        relTol          0.05;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }

    C
    {
        solver         smoothSolver;
        smoother       GaussSeidel;
        tolerance 1e-7; 
        relTol  0.05;
    }

    "(U|k|epsilon|omega|f|v2)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }
    pFinal
	{
		$p;
		relTol 0;
	}
    "(U|k|epsilon)Final"
	{
		$U;
		relTol 0;
	}
}


PIMPLE
{
    momentumPredictor   yes;
    nOuterCorrectors    1;
    nCorrectors         3;
    nNonOrthogonalCorrectors 1;
}

relaxationFactors
{
    equations
    {
        U           0.8; // 0.9 is more stable but 0.95 more convergent
	    p 	        0.7; 
        C           1.0; 
       // ".*"            0.8; // 0.9 is more stable but 0.95 more convergent
    }
}


